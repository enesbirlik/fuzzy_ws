<?xml version="1.0" ?>
<robot name="cartopole">

  <material name="red">
    <color rgba="1.0 0.0 0.0 1.0"/>
  </material>
  
  <material name="green">
    <color rgba="0.0 1.0 0.0 1.0"/>
  </material>
  
  <material name="blue">
    <color rgba="0.0 0.0 1.0 1.0"/>
  </material>
  
  <material name="gray">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <link name="slideBar">
    <visual>
      <geometry>
        <box size="0.47 0.05 0.05"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.47 0.05 0.05"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="100"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <link name="cart">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.04"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.04"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <link name="leg1">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.5"/>
      </geometry>
      <origin xyz="0 0 -0.25"/>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.02" length="0.5"/>
      </geometry>
      <origin xyz="0 0 -0.25"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <link name="leg2">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.5"/>
      </geometry>
      <origin xyz="0 0 -0.25"/>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.02" length="0.5"/>
      </geometry>
      <origin xyz="0 0 -0.25"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <link name="pole">
    <visual>
      <geometry>
        <cylinder radius="0.005" length="0.24"/>
      </geometry>
      <origin xyz="0 0 -0.12"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.005" length="0.24"/>
      </geometry>
      <origin xyz="0 0 -0.12"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 -0.12"/>
      <inertia 
            ixx="0.0005" ixy="0.0" ixz="0.0"
            iyy="0.0005" iyz="0.0"
            izz="0.00001"/>
    </inertial>
  </link>

  <link name="world"/>

  <joint name="world_to_slideBar" type="fixed">
    <origin xyz="0 0 0.5"/>
    <parent link="world"/>
    <child link="slideBar"/>
  </joint>

  <joint name="slider_to_cart" type="prismatic">
    <axis xyz="1 0 0"/>
    <origin xyz="0.0 0.0 0.045"/>
    <parent link="slideBar"/>
    <child link="cart"/>
    <limit effort="1000.0" lower="-0.235" upper="0.235" velocity="10.0"/>
    <dynamics damping="0.5" friction="0.5"/>
  </joint>

  <joint name="slider_to_leg1" type="fixed">
    <origin xyz="-0.235 0.0 0.0"/>
    <parent link="slideBar"/>
    <child link="leg1"/>
  </joint>

  <joint name="slider_to_leg2" type="fixed">
    <origin xyz="0.235 0.0 0.0"/>
    <parent link="slideBar"/>
    <child link="leg2"/>
  </joint>

  <joint name="cart_to_pole" type="continuous">
    <parent link="cart"/>
    <child link="pole"/>
    <origin xyz="0 0.04 0.02" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.01" friction="0.0"/>
    <limit effort="10.0" velocity="10.0"/>
  </joint>


  <!-- <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    <joint name="slider_to_cart">
      <command_interface name="effort">
        <param name="min">-15</param>
        <param name="max">15</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>

    <joint name="cart_to_pole">
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
  </ros2_control> -->

  <ros2_control name="RealHardware" type="system">
    <hardware>
      <plugin>cartpole_controller/CartpoleHardwareInterface</plugin>
      <param name="device_path">/dev/ttyUSB0</param>
      <param name="baud_rate">115200</param>
    </hardware>
    <joint name="slider_to_cart">
      <command_interface name="effort">
        <param name="min">-15</param>
        <param name="max">15</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>

    <joint name="cart_to_pole">
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
  </ros2_control>

  <gazebo reference="slideBar">
    <material>Gazebo/Green</material>
  </gazebo>

  <gazebo reference="cart">
    <material>Gazebo/Blue</material>
  </gazebo>

  <gazebo reference="pole">
    <material>Gazebo/Red</material>
  </gazebo>
  
  <gazebo reference="leg1">
    <material>Gazebo/Gray</material>
  </gazebo>
  
  <gazebo reference="leg2">
    <material>Gazebo/Gray</material>
  </gazebo>

  <gazebo>
    <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
      <parameters>$(find cartpole_fuzzy)/config/cartpole_controller_effort.yaml</parameters>
      <robot_sim_type>gazebo_ros2_control/GazeboSystem</robot_sim_type>
    </plugin>
  </gazebo>

</robot>