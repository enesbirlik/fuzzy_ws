<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find cartpole_description)/urdf/pole/pole.gazebo.xacro"/>
  <xacro:include filename="$(find cartpole_description)/urdf/pole/pole.control.xacro"/>
  
  <xacro:macro name="pole_v0" params="parent *joint_origin *joint_axis">
	<joint name="pole_joint" type="revolute">
	  <xacro:insert_block name="joint_origin"/>
	  <parent link="${parent}"/>
	  <child link="pole_link"/>
          <limit effort="15" velocity="10" lower="-1.7" upper = "1.7"/>
          <dynamics damping="0.00001" friction="0.00001"/>
	  <xacro:insert_block name="joint_axis"/>
	</joint>

	<link name="pole_link">
      <visual>
        <geometry>
          <cylinder radius="0.005" length="0.24"/>
        </geometry>
        <origin xyz="0 0 -0.12"/>
        <material name="green"/>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.005" length="0.24"/>
        </geometry>
        <origin xyz="0 0 -0.12"/>
      </collision>
      <inertial>
        <origin xyz="0 0 -0.12"/>
        <mass value="0.1"/>
        <inertia 
              ixx="0.0005" ixy="0.0" ixz="0.0"
              iyy="0.0005" iyz="0.0"
              izz="0.00001"/>
      </inertial>
    </link>
  </xacro:macro>

</robot>
