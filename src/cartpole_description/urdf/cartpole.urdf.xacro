<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="cartpole">

  <xacro:arg name="is_sim" default="true"/>

  <xacro:include filename="$(find cartpole_description)/urdf/cartpole_gazebo.xacro"/>
  <xacro:include filename="$(find cartpole_description)/urdf/cartpole_control.xacro"/>

  <material name="red">
    <color rgba="1.0 0.0 0.0 1.0"/>
  </material>
  
  <material name="green">
    <color rgba="0.0 1.0 0.0 1.0"/>
  </material>
  
  <material name="blue">
    <color rgba="0.0 0.0 1.0 1.0"/>
  </material>
  
  <material name="gray">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <link name="slideBar">
    <visual>
      <geometry>
        <box size="0.47 0.05 0.05"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.47 0.05 0.05"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="100"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <link name="cart">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.04"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.04"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <link name="leg1">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.5"/>
      </geometry>
      <origin xyz="0 0 -0.25"/>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.02" length="0.5"/>
      </geometry>
      <origin xyz="0 0 -0.25"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <link name="leg2">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.5"/>
      </geometry>
      <origin xyz="0 0 -0.25"/>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.02" length="0.5"/>
      </geometry>
      <origin xyz="0 0 -0.25"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <link name="pole">
    <visual>
      <geometry>
        <cylinder radius="0.005" length="0.24"/>
      </geometry>
      <origin xyz="0 0 -0.12"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.005" length="0.24"/>
      </geometry>
      <origin xyz="0 0 -0.12"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 -0.12"/>
      <inertia 
            ixx="0.0005" ixy="0.0" ixz="0.0"
            iyy="0.0005" iyz="0.0"
            izz="0.00001"/>
    </inertial>
  </link>

  <link name="world"/>

  <joint name="world_to_slideBar" type="fixed">
    <origin xyz="0 0 0.5"/>
    <parent link="world"/>
    <child link="slideBar"/>
  </joint>

  <joint name="slider_to_cart" type="prismatic">
    <axis xyz="1 0 0"/>
    <origin xyz="0.0 0.0 0.045"/>
    <parent link="slideBar"/>
    <child link="cart"/>
    <limit effort="20.0" lower="-0.235" upper="0.235" velocity="10.0"/>
    <dynamics damping="0.5" friction="0.5"/>
  </joint>

  <joint name="slider_to_leg1" type="fixed">
    <origin xyz="-0.235 0.0 0.0"/>
    <parent link="slideBar"/>
    <child link="leg1"/>
  </joint>

  <joint name="slider_to_leg2" type="fixed">
    <origin xyz="0.235 0.0 0.0"/>
    <parent link="slideBar"/>
    <child link="leg2"/>
  </joint>

<joint name="cart_to_pole" type="continuous">
  <parent link="cart"/>
  <child link="pole"/>
  <origin xyz="0 0.04 0.02" rpy="3.14159 0 0"/>
  <axis xyz="0 1 0"/>
  <dynamics damping="0.01" friction="0.0"/>
</joint>

</robot>
